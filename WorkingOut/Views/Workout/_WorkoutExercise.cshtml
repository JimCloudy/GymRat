@model WorkingOut.Models.WorkoutExercise

@{
    var newExercise = Model.ID == 0 ? "newexercise" : "";
}

    <div class="workoutExercises @newExercise">

        @Html.HiddenFor(model => model.ID)
        
        @Html.HiddenFor(model => model.WorkoutID)
                        
        <div class="form-group">
            @Html.LabelFor(model => model.ExerciseID, "ExerciseID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ExerciseID",(IEnumerable<SelectListItem>)ViewBag.Exercises, htmlAttributes: new { @class = "form-control"})
                @Html.ValidationMessageFor(model => model.ExerciseID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Sets, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Sets, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Sets, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Reps, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Reps, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Reps, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Weight, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Weight, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Weight, "", new { @class = "text-danger" })
            </div>
        </div>

        <input type="hidden" name="deleteExercise" class="deleteExercise" value="false" />

        <div class="form-group">
            <div class="col-md-offset-6">
                <button type="button" class="btn btn-primary btn-lg btnRmv">Remove Exercise From Routine</button>
            </div>
        </div>

    </div>
